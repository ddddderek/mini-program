.weatherWrapper {
  min-height: 100vh;
  overflow:hidden;
  font-size: 30rpx;
  color:#fff;
  background-color:#40a7e7;
}
.weatherWrapper .bcg {
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #40a7e7;
}
.weatherWrapper .searchCityWrapper{  
  position: fixed;
  z-index: 4;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;

}
.weatherWrapper .searchCityWrapper .searchCityContainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  margin: 15rpx 50rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  border: none;
  border-bottom: 1rpx solid #fff;
}
.weatherWrapper .searchCityWrapper .searchCityContainer image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}
.weatherWrapper .searchCityWrapper .searchCityContainer input {
  flex: 1;
}
.searchPlaceholderStyle{
  color:#fff;
}
.weatherWrapper .weatherContainer, .weatherWrapper .copy {
  position: relative;
  z-index: 2;
}
.weatherWrapper .weatherContainer .curCity {
  position:relative;
}
.weatherWrapper .weatherContainer .curCity .pos{
  text-align: center;
  font-size:36rpx;
}
.weatherWrapper .weatherContainer .curCity .time{
  font-size:24rpx;
  position: absolute;
  right:30rpx;
  top:50%;
  transform: translateY(-50%);
}
.weatherWrapper .weatherContainer .curCondition .temperature{
  height: 360rpx;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  font-size: 200rpx;
  font-weight: 100;
}
.weatherWrapper .weatherContainer .curCondition .weatherDesc{
  text-align: center;
  font-size: 24rpx;
  padding:20rpx 0rpx;
}
.weatherWrapper .weatherContainer .curCondition .pm25{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
} 
.weatherWrapper .weatherContainer .curCondition .pm25 text{
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  margin-top:10rpx;
  margin-bottom:30rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, .2);
}
.weatherWrapper .weatherContainer .predict {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  padding-top: 20rpx;
  background: rgba(6, 85, 114, .1);
  margin-bottom: 20rpx;
}
.weatherWrapper .weatherContainer .predict .predict_item{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.predict_item .common{
  padding-bottom:20rpx;
}

.weatherWrapper .weatherContainer .lifeMark{
  background: rgba(6, 85, 114, .1);
}
.weatherWrapper .weatherContainer .lifeMark .lifeMark_item{
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}
.weatherWrapper .weatherContainer .lifeMark .lifeMark_item .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
.weatherWrapper .weatherContainer .lifeMark .lifeMark_item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}
.weatherWrapper .weatherContainer .lifeMark .lifeMark_item .right view{
  margin-top: 10rpx;
  font-size: 24rpx;
}
.weatherWrapper .weatherContainer .copy {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
  height: 70rpx;
  font-size: 22rpx;
}
.menus .menu {
  height: 40px;
  width: 40px;
  position: fixed;
  z-index: 100;
  bottom: 150rpx;
  right: 70rpx;
  opacity: 0;
}
.menus .main {
  opacity: 1;
}
