.aboutWrapper {
  font-size: 30rpx;
  color: #666;
  padding: 0 40rpx 40rpx;
}
.aboutWrapper .swiper_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  padding: 60rpx 40rpx;
}
.aboutWrapper .swiper_item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}
.aboutWrapper .contentWrapper {
  line-height: 2.2em;
}
.aboutWrapper .contentWrapper .title {
  font-size: 32rpx;
  color: #40a7e7;
  margin: 26rpx 0;
}
.aboutWrapper .contentWrapper .body {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  margin-left: 10rpx;
}
.aboutWrapper .contentWrapper .body image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.aboutWrapper .contentWrapper.feedback .body .quickContact {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  top: 0;
  left: 1;
  opacity: 0;
}
.contentWrapper.attention .body {
  margin-left: 0;
}
